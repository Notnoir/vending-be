# Environment Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=vending_machine
DB_USER=root
DB_PASSWORD=your_password

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=24h

# MQTT Configuration
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=vending_admin
MQTT_PASSWORD=secure_mqtt_password

# Payment Gateway Configuration (contoh untuk Midtrans)
PAYMENT_SERVER_KEY=your_payment_server_key
PAYMENT_CLIENT_KEY=your_payment_client_key
PAYMENT_IS_PRODUCTION=false

# Machine Configuration
MACHINE_ID=VM01
MACHINE_TOKEN=your_machine_token_here

# File Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
